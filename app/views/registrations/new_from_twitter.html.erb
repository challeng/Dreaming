<h2>Just the last few steps of your sign up <%= session["screen_name"] %>!</h2>
<br/>

<h3>Some Basic Info</h3>
<br/>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

	<%= f.hidden_field :screen_name, :value => session["screen_name"] %>

  <div><%= f.label :first_name %><br />
  <%= f.text_field :first_name %></div>

  <div><%= f.label :last_name %><br />
  <%= f.text_field :last_name %></div>

  <div><%= f.label :location %><br />
  <%= f.text_field :location %></div>

  <div><%= f.label "Tell us about yourself" %><br />
  <%= f.text_area :bio %></div>

  <br/>
  <div><h4><%= f.label "Have you been lucid before?" %></h4>
  <%= f.check_box :been_lucid %></div>
  <br/>

  <h3>Sign Up Info</h3>
  <br/>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
